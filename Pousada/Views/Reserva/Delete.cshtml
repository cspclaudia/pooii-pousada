@model Pousada.Models.Reserva

@{
    ViewData["Title"] = "Reserva";
}

<h1>Excluir Reserva</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Número do Quarto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quarto.Numero)
        </dd>
        <dt class="col-sm-2">
            Hóspede
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hospede.Nome)
        </dd>
        <dt class="col-sm-2">
            Data da Entrada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            Data da Saída
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSaida)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar" class="btn btn-dark" />
    <a type="button" class="btn btn-light" asp-action="Index">Lista de Reservas</a>
    </form>
</div>