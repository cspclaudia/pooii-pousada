@model Pousada.Models.Reserva

@{
    ViewData["Title"] = "Reserva";
}

<h1>Excluir Reserva</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Número do Quarto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quarto.Numero)
        </dd>
        <dt class="col-sm-2">
            Hospede
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hospede.Nome)
        </dd>
        <dt class="col-sm-2">
            Data da Entrada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            Data da Saída
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSaida)
        </dd>
    </dl>
</div>
<div>
    <a type="button" class="btn btn-dark" asp-action="Delete" asp-route-id="@Model.Id">Confirmar</a> |
    <a type="button" class="btn btn-light" asp-action="Index">Lista de Reservas</a>
</div>