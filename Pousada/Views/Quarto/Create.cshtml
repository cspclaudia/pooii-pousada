@model Pousada.Models.Quarto

@{
    ViewData["Title"] = "Quarto";
}

<h1>Cadastrar Quarto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tipo</label>
                <select asp-for="Tipo" class="form-control" >
                    <option value="Simples">Simples</option> 
                    <option value="Duplo" selected>Duplo</option>
                    <option value="Triplo">Triplo</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">NÃºmero</label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-dark" /> |
                <a asp-action="Index">Lista de Quartos</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
